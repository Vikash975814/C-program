
#include<stdio.h>
#include<conio.h>
void main()
{
    int i,j;
    int n=5;
    for(i=1;i<=n;i++)
    {
        for(j=1;j<=i-1;j++)
        {
            printf(" ");
        }
        for(j=1;j<=n-i+1;j++)
        {
            printf("*");
        }
        printf("\n");
    }
    
    getch();
}
