 
include<stdio.h>
#include<conio.h>
void main()
{
    int a,b,result;
    char op;
    printf("enter the operater and value");
    scanf("%c%d%d",&op,&a,&b);
    switch(op)
    {
        case '+':
        result=a+b;
        printf("%d",result);
        break;
        case '-':
        result=a-b;
        printf("%d",result);
        break;
        case '*':
        result=a*b;
        printf("%d",result);
        break;
        case '/':
        result=a/b;
        printf("%d",result);
        break;
        default:
        printf("wrong choice");
    }
    getch();
}
